{
  "id": null,
  "title": "UFO Service Overview",
  "description": "Основные метрики UFO gRPC сервиса",
  "tags": ["ufo", "grpc", "microservice"],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "description": "Количество запросов в секунду к UFO сервису",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(ufo_requests_total[1m])",
          "legendFormat": "{{method}} - {{status}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 2,
      "title": "Error Rate",
      "description": "Количество ошибок в секунду",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "rate(ufo_requests_total{status=\"error\"}[1m])",
          "legendFormat": "{{method}} - errors",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0,
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "errors"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Request Duration p95",
      "description": "95-й перцентиль времени выполнения запросов",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(ufo_request_duration_seconds_bucket[1m])) by (le, method))",
          "legendFormat": "{{method}} - p95",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      }
    },
    {
      "id": 5,
      "title": "UFO Sightings Rate",
      "description": "Скорость создания наблюдений НЛО (наблюдения/сек)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(ufo_sightings_total[1m])",
          "legendFormat": "New sightings",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0,
          "color": {
            "mode": "fixed",
            "fixedColor": "green"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Analysis Duration p95",
      "description": "95-й перцентиль времени выполнения анализа НЛО",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(ufo_analysis_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "Analysis p95",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      }
    }
  ],
  "version": 1,
  "uid": "ufo-service-overview",
  "schemaVersion": 30
} 